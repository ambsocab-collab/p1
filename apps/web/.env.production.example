# ===========================================
# PRODUCTION ENVIRONMENT VARIABLES
# ===========================================
# Copy this file to .env.production for production deployment

# ===========================================
# SUPABASE CONFIGURATION (PRODUCTION)
# ===========================================
# IMPORTANT: Replace these with your production Supabase values
VITE_SUPABASE_URL=https://your-production-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-production-anon-key

# ===========================================
# APPLICATION CONFIGURATION (PRODUCTION)
# ===========================================
VITE_APP_NAME=AMFE Tool
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Auditoría Médica Facilitada con Evidencias
VITE_APP_URL=https://your-production-domain.com
VITE_APP_SUPPORT_EMAIL=support@your-production-domain.com

# ===========================================
# AUTHENTICATION CONFIGURATION (PRODUCTION)
# ===========================================
VITE_DISABLE_AUTH=false
VITE_ENABLE_ANONYMOUS_AUTH=false  # Typically disabled in production
VITE_AUTH_SESSION_TIMEOUT=1800000  # 30 minutes in milliseconds (shorter for production)
VITE_ENABLE_MAGIC_LINK=true

# ===========================================
# FEATURE FLAGS (PRODUCTION)
# ===========================================
VITE_ENABLE_ANALYTICS=true  # Enable analytics in production
VITE_ENABLE_ERROR_REPORTING=true  # Enable error reporting in production
VITE_ENABLE_PERFORMANCE_MONITORING=true  # Enable performance monitoring
VITE_ENABLE_DEBUG_MODE=false  # Disable debug mode in production

# ===========================================
# DEVELOPMENT CONFIGURATION (PRODUCTION)
# ===========================================
VITE_DEV_MODE=false  # Always false in production
VITE_LOG_LEVEL=error  # Only log errors in production
VITE_ENABLE_MOCK_DATA=false  # Always false in production
VITE_ENABLE_API_MOCKING=false  # Always false in production

# ===========================================
# FILE UPLOAD CONFIGURATION (PRODUCTION)
# ===========================================
VITE_MAX_FILE_SIZE=52428800  # 50MB in bytes (adjust as needed)
VITE_ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png,gif,zip,rar
VITE_MAX_FILES_PER_UPLOAD=10  # Adjust based on your needs

# ===========================================
# CACHE CONFIGURATION (PRODUCTION)
# ===========================================
VITE_ENABLE_CACHE=true  # Enable caching in production
VITE_CACHE_TTL=600000  # 10 minutes in milliseconds (longer cache in production)

# ===========================================
# SECURITY CONFIGURATION (PRODUCTION)
# ===========================================
VITE_ENABLE_RATE_LIMITING=true  # Always enable in production
VITE_RATE_LIMIT_REQUESTS=50  # More restrictive in production
VITE_RATE_LIMIT_WINDOW=600000  # 10 minutes in milliseconds

# ===========================================
# ADDITIONAL PRODUCTION SETTINGS
# ===========================================
# Add any production-specific environment variables here
# VITE_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
# VITE_SENTRY_DSN=https://your-sentry-dsn
# VITE_STRIPE_PUBLISHABLE_KEY=pk_live_...